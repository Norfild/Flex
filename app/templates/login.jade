

.login(ng-controller="LoginController")

    .alert(ng-show='error') {{error}}

    form(
        role="form"
        ng-submit="login()"
        name="form")

        .title Login

        .item-form
            input.elem-form(
                ng-model='username'
                name='username'
                type='text',
                placeholder='Name',
                autofocus,
                required)

        .item-form
            input.elem-form(
                ng-model='password',
                name='password'
                type='password',
                placeholder='Password',
                required)

        button.button-primary(type='submit') Sign in
        //input.button-primary(
        //    ng-disabled='form.$invalid || dataLoading'
        //    type='submit',
        //    text='Sign in'
        //    )
        img(
            ng-if='dataLoading'
            src='data:image/gif;base64,')






        hr(style='margin-top: 50px;')

        .title JSON

        p {{username | json}}